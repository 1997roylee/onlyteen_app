{
    "compilerOptions": {
        "target": "ESNext",
        "jsxImportSource": "@emotion/react",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "es2017"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": [
            "node"
        ],
        "baseUrl": "app/frontend",
        "paths": {
            "pages/*": [
                "pages/*",
                "pages"
            ],
            "components/*": [
                "components/*",
                "components"
            ],
            "types/*": [
                "types/*",
                "types"
            ],
            "utils/*": [
                "utils/*",
                "utils"
            ],
            "stores/*": [
                "stores/*",
                "stores"
            ],
        }
    },
    "include": [
        "app/frontend/**/*",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}